
@{
    ViewBag.Title = "Index";
}
<div class="row">
    <div class="col-lg-12">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <div class="row">
                    <div class="col-md-4">
                        <div class="form-group">
                            <label class="control-label bold col-md-4">文件名:</label>
                            <div class="col-md-8">
                                <input type="text" class="form-control input-sm" id="MovieFileName" data-model = "filter.MovieFileName"/>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label class="control-label bold col-md-3">地区:</label>
                            <div class="col-md-9">
                                @Html.DropDownList("CategoryByLocal", null, new { @class = "form-control", data_model = "filter.CategoryByLocal" })
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4 ">
                        <div class="form-group">
                            <label class="control-label bold col-md-4" for="dtp_input1">上映年份:</label>
                            <div class="form-group">
                                <div class="col-md-8 input-group date form_year" data-link-field="dtp_input1">
                                    <input class="form-control"  type="text" id="PublicDate" data-model = "filter.PublicDate">
                                    <span class="input-group-addon"><span class="glyphicon glyphicon-remove"></span></span>
                                    <span class="input-group-addon"><span class="glyphicon glyphicon-th"></span></span>
                                </div>
                                <input type="hidden" id="dtp_input1" value="" /><br />
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="pull-right">
                        <a class="btn btn-sm btn-info" id="btnSearch"><i class="fa fa-search"></i> 搜索 </a>
                        <a href="@Url.Action("Create")" class="btn btn-sm btn-primary"><i class="fa fa-plus-circle"></i> 新增 </a>
                    </div>
                </div>
            </div>
            <div class="ibox-content">
                <table class="table table-striped table-bordered table-hover dataTables-example dataTable" id="movieList"></table>
            </div>
        </div>
    </div>
</div>

@section Styles {
    @Styles.Render("~/Content/dataTablesStyles")
    @Styles.Render("~/Content/datetimepickerStyles")
}
@section scripts {
    @Scripts.Render("~/bundles/dataTables")
    @Scripts.Render("~/bundles/datetimepicker")
    @Scripts.Render("~/Scripts/common.js")
    @Scripts.Render("~/Scripts/ControlJS/movie_index.js")
}