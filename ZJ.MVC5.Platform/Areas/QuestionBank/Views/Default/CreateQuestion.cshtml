
@using ZJ.App.Entity
@{
    ViewBag.Title = "添加题目";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>@ViewBag.Title</h2>
        <ol class="breadcrumb">
            <li><a href="@Url.Action("Index", "Default",new { area = "QuestionBank"})">题目列表</a></li>
            <li class="active">
                <strong>@ViewBag.Title</strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-2">

    </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="ibox float-e-margins">
            <form id="form1" name="question_bank">
                <div class="ibox-content">
                    <div class="row">
                        <div class="col-md-6">
                            <label class="col-md-4 control-label" for="dtp_input1">学科:</label>
                            <div class="form-group">
                                <div class="col-md-8 input-group">
                                    @Html.DropDownList("SubjectType", null, new { @class = "form-control", data_model = "question.SubjectType" })
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <label class="col-md-4 control-label">题型:</label>
                            <div class="form-group">
                                <div class="col-md-8 input-group">
                                    @Html.DropDownList("QuestionType", null, new { @class = "form-control", data_model = "question.QuestionType" })
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label class="col-md-2 control-label"><span style="color:red">*</span>题面</label>
                                <div class="col-md-9 input-group">
                                    @Html.TextBox("QuestionTitle", null, new { @class = "form-control", required = "required", data_model = "question.QuestionTitle", style = "max-width: 100%;" })
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label class="col-md-2 control-label"><span style="color:red">*</span>题目</label>
                                <div class="col-md-9 input-group">
                                    @Html.TextArea("QuestionContent", null, new { @class = "form-control", required = "required", data_model = "question.QuestionContent", style = "max-width: 100%; height:400px" })
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
    <div class="row">
        <center>
            <a href="javascript:void(0);" class="btn btn-success" id="btnSave"><i class="fa fa-save"></i> 保存 </a>
        </center>
    </div>
</div>
@section Styles {
    @Styles.Render("~/Content/jQueryFileUploadCss")
    @Styles.Render("~/Content/datetimepickerStyles")
}
@section scripts {
    @Scripts.Render("~/bundles/jQueryFileUpload")
    @Scripts.Render("~/bundles/datetimepicker")
    @Scripts.Render("~/Scripts/common.js")
    @Scripts.Render("~/Scripts/plugins/kindeditor/kindeditor-all.js")
    @Scripts.Render("~/Scripts/ControlJS/question_create.js")

}

